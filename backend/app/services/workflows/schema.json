{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Generated schema for Root",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["id", "title", "description"]
    },
    "config": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "image": {
          "type": "string"
        },
        "launch_command": {
          "type": "string"
        }
      },
      "required": ["type", "image", "launch_command"]
    },
    "params": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "multiple": {
            "type": "boolean"
          },
          "required": {
            "type": "boolean"
          },
          "options": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "flag": {
            "type": "string"
          },
          "accepted_formats": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "range": {
            "type": "object",
            "properties": {
              "min": {
                "type": "number"
              },
              "max": {
                "type": "number"
              }
            },
            "required": ["min", "max"]
          },
          "default": {}
        },
        "required": [
          "id",
          "title",
          "type",
          "description",
          "required",
          "default"
        ]
      }
    }
  },
  "required": ["metadata", "config", "params"]
}
